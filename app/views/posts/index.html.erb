<p id="notice"><%= notice %></p>

<h1>git練習用に書き換えてます一覧</h1>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% if post.image? %>
          <td><%= image_tag post.image.url %></td>
        <% else %>
          <td>画像がありません</td>
        <% end %>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.body %></td>
        <td><%= render 'posts/tag_list', tag_list: post.interest_list %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts %>

<br>

<%= link_to 'New Post', new_post_path %>
