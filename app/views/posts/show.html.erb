<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<% if current_user.id == @post.user.id %>

  <%= link_to 'Edit', edit_post_path(@post) %> 
  <%= link_to 'Destroy', @post, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>
<% end %>



