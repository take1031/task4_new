<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :post_title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :post_body %>
  </div>

  <div class="field">
      <%= form.label :user_id %><br>
　    ユーザーID
      <%= form.collection_select :user_id, User.all, :id, :id %>
  </div>

  <div class="field">
      <%= form.label :image %>
      <%= form.file_field :image %>
  </div>

  <div class="field">
      <%= form.label :interest_list,"興味・関心（小カンマ「,」区切り）" %><br>
      <%= text_field_tag 'post[interest_list]', @post.interest_list.join(',') %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
